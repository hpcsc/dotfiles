{
/*
	// Place your snippets for Ruby here. Each snippet is defined under a snippet name and has a prefix, body and
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the
	// same ids are connected.
	// Example:
	"Print to console": {
		"prefix": "log",
		"body": [
			"console.log('$1');",
			"$2"
		],
		"description": "Log output to console"
	}
*/
	"Rspec Describe": {
		"prefix": "rdescribe",
		"body": [
			"describe '$1' do",
			"\t$2",
			"end"
		],
		"description": "Rspec Describe"
	},

	"Rspec Context": {
		"prefix": "rcontext",
		"body": [
			"context '$1' do",
			"\t$2",
			"end"
		],
		"description": "Rspec Context"
	},

	"Rspec Before Each": {
		"prefix": "rbe",
		"body": [
			"before(:each) do",
			"\t$1",
			"end"
		],
		"description": "Rspec Before Each"
	},

	"Rspec After Each": {
		"prefix": "rae",
		"body": [
			"after(:each) do",
			"\t$1",
			"end"
		],
		"description": "Rspec Before Each"
	},

	"Rspec It": {
		"prefix": "rit",
		"body": [
			"it '$1' do",
			"\t$2",
			"end"
		],
		"description": "Rspec It"
	},

	"Ruby def": {
		"prefix": "rdef",
		"body": [
			"def $1($2)",
			"\t$3",
			"end"
		],
		"description": "Ruby def"
	},

	"Ruby class": {
		"prefix": "rclass",
		"body": [
			"class $1",
			"\t$2",
			"end"
		],
		"description": "Ruby class"
	}
}
