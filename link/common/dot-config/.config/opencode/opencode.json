{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "edit": "ask",
    "bash": {
      "*": "ask",
      "grep": "allow",
      "git status": "allow",
      "git show": "allow",
      "git diff": "allow",
      "rg": "allow",
      "find": "allow",
      "ls": "allow"
    }
  },
  "theme": "gruvbox",
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (local)",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "llama3.1": {
          "name": "Llama 3.1"
        }
      }
    }
  }
}
