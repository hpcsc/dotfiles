local resource_type=$1
if [ "$resource_type" = "" ]; then
  echo "=== resource type (.e.g. pod, service) is required"
  return
fi;

local namespace=$(k-choose-namespace)
if [ "$namespace" = "" ]; then
  return
fi;

local selected=$(kubectl get $resource_type -n $namespace | awk '{if(NR > 1) print $1}' | fzf-tmux --height 30% --reverse -0)
if [ "$selected" = "" ]; then
  return
fi;

kubectl describe $resource_type $selected -n $namespace

