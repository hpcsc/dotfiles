{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "external_directory": {
      "~/.config/ai/**": "allow"
    },
    "edit": "ask",
    "bash": {
      "*": "ask",
      "cat*": "allow",
      "grep*": "allow",
      "go build*": "allow",
      "go vet*": "allow",
      "go test*": "allow",
      "git status*": "allow",
      "git show*": "allow",
      "git diff*": "allow",
      "git log*": "allow",
      "git ls-tree*": "allow",
      "rg*": "allow",
      "find*": "allow",
      "fd*": "allow",
      "echo*": "allow",
      "sort*": "allow",
      "uniq*": "allow",
      "head*": "allow",
      "tail*": "allow",
      "less*": "allow",
      "wc*": "allow",
      "awk*": "allow",
      "tree*": "allow",
      "ls*": "allow"
    }
  },
  "theme": "gruvbox"
}
