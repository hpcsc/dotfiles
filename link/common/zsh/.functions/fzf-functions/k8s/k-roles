local namespace=$(k-choose-namespace $@)
local account=$(k-choose-account $namespace)

echo "=== ClusterRoles and Roles bound to service account '${account}' in namespace '${namespace}':"
kubectl get clusterrolebinding -o json | jq -r "    
  .items[]
  | 
  select(
    .subjects[]?
    | 
    select(
        .kind == \"ServiceAccount\" 
        and
        .name == \"${account}\"
        and
        .namespace == \"${namespace}\"
    )
  )
  |
  (.roleRef.kind + \"/\" + .roleRef.name)
"

kubectl get rolebinding -n $namespace -o json | jq -r "    
  .items[]
  | 
  select(
    .subjects[]?
    | 
    select(
        .kind == \"ServiceAccount\" 
        and
        .name == \"${account}\"
        and
        .namespace  == \"${namespace}\"
    )
  )
  |
  (.roleRef.kind + \"/\" + .roleRef.name)
"

