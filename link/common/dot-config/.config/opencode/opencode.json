{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "edit": "ask",
    "bash": {
      "*": "ask",
      "cat*": "allow",
      "grep*": "allow",
      "go test*": "allow",
      "git status*": "allow",
      "git show*": "allow",
      "git diff*": "allow",
      "git log*": "allow",
      "git ls-tree*": "allow",
      "rg*": "allow",
      "find*": "allow",
      "fd*": "allow",
      "echo*": "allow",
      "sort*": "allow",
      "uniq*": "allow",
      "head*": "allow",
      "tail*": "allow",
      "less*": "allow",
      "wc*": "allow",
      "awk*": "allow",
      "tree*": "allow",
      "ls*": "allow"
    }
  },
  "theme": "gruvbox",
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (local)",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "llama3.1": {
          "name": "Llama 3.1"
        }
      }
    }
  },
  "lsp": {
    "cue": {
      "command": ["/usr/local/bin/start-cue-lsp.sh"],
      "extensions": [".cue"]
    }
  }
}
