function drmb() {
    local command="docker rm -f \$(docker ps -a | grep '$1' | awk '{print \$1}')"
    execute $command
}

function dirmb() {
    local command="docker rmi -f \$(docker images | grep '$1' | awk '{print \$3}')"
    execute $command
}

function dcsh() {
    local container=$1
    shift
    local shell_command=$@
    local command="docker-compose exec $container sh -c \"$shell_command\""
    execute $command
}

function dsh() {
    local container=$1
    shift
    local shell_command=$@
    local command="docker exec $container sh -c \"$shell_command\""
    execute $command
}
